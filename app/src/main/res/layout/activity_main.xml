<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wen.picssodemo.MainActivity">

   <Button
       android:id="@+id/btn_netWork"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="加载网络图片"/>
   <Button
       android:id="@+id/btn_resize"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="裁剪图片"/>
   <Button
       android:id="@+id/btn_rotate"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="旋转图片"/>
   <Button
       android:id="@+id/btn_centerInside"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="按比例裁剪，图片完全显示"/>
   <Button
       android:id="@+id/btn_centerCrop"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="按比例裁剪，图片居中显示"/>
   <Button
       android:id="@+id/btn_noFade"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="取消图片的过渡显示效果"/>

   <Button
       android:id="@+id/btn_recyclerView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="在RecyclerView中加载图片"/>
   <ImageView
       android:id="@+id/iv_photo"
       android:layout_width="match_parent"
       android:layout_height="match_parent" />

</LinearLayout>
